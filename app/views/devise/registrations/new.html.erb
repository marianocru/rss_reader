<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :multipart=>true) do |f| %>
  <%= devise_error_messages! %>
    <div><%= f.label :first_name  %>
    <%= f.text_field :first_name %>

    <div><%= f.label :last_name  %>
    <%= f.text_field :last_name   %>

    <div><%= f.label :email  %>
    <%= f.text_field :email   %>

    <div><%= f.label :username %>
        <%= f.text_field :username %></div>

    <div><%= f.label :avatar %>
      <%= f.file_field :avatar %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

      <div><%= f.label :login %>
        <%= f.text_field :login %></div>

  <div><%= f.label :profile %>
   <%= f.collection_select :profile_id, Profile.all, :id, :name, :prompt => "Select a profile" %> </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
